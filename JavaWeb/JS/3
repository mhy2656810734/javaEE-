    <ul>
        <li>11</li>
        <li>22</li>
    </ul>
    <script>
        let ul = document.querySelector('ul');
        for (let n = 3;n < 10;n++){
            let lit = document.createElement('li');
            lit.innerHTML = n+''+n;
            ul.appendChild(lit);
        }
        // 删除33这个元素
        let toDelete = document.querySelectorAll('li')[2];
        console.log(toDelete);
        ul.removeChild(toDelete);
    </script>
