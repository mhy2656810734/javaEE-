    <script>
        let div = document.querySelector('div');
        div.onclick = function() {
            // 先获取到当前的字体大小
            console.log(div.style.fontSize);
            // 然后调整
            // 得到的是字符串 需要转换
            let size = parseInt(div.style.fontSize);
            size += 10;
            // 再转换成字符串重新赋值
            div.style.fontSize = size + 'px';
            
        }
    </script> -->
    
    <!-- <div id="one" class = "light" style="font-size: 20px; height: 500px;">
        这是一个div,点击之后字体放大
    </div>
    <style>
        .light{
            /* 日间模式 */
            color: black;
            background-color: white;
        }
        .dart{
            /* 夜间模式 */
            color:white;
            background-color: black;
        }
    </style>
    <script>
        let div = document.querySelector('#one');
        div.onclick = function() {
            // 点击div切换夜间模式和日间模式
            if (div.className == 'light') {
                div.className = 'dart';
            } else {
                div.className = 'light';
            }
        }
    </script> -->
